[Unit]
Description=Preload Ollama Models into VRAM
After=ollama.service
Wants=ollama.service

[Service]
Type=oneshot
User=azureuser
ExecStartPre=/bin/sleep 10
ExecStart=/home/azureuser/preload-ollama-models.sh
RemainAfterExit=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

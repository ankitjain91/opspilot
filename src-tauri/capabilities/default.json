{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "argocd-ui",
    "argocd-embedded"
  ],
  "permissions": [
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-set-focus",
    "core:webview:allow-create-webview-window",
    "core:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "uvx",
          "cmd": "uvx",
          "args": true
        },
        {
          "name": "uv",
          "cmd": "uv",
          "args": true
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "kubectl",
          "cmd": "kubectl",
          "args": true
        },
        {
          "name": "open",
          "cmd": "open",
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true
        }
      ]
    },
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    "fs:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.atlassian.net/*" },
        { "url": "https://*.atlassian.com/*" },
        { "url": "https://*.jira.com/*" },
        { "url": "http://localhost:*/*" },
        { "url": "http://127.0.0.1:*/*" }
      ]
    },
    "opener:default",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**"
      ]
    }
  ]
}
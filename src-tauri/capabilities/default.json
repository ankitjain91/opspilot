{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "uvx",
          "cmd": "uvx",
          "args": true
        },
        {
          "name": "uv",
          "cmd": "uv",
          "args": true
        },
        {
          "name": "npm",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "kubectl",
          "cmd": "kubectl",
          "args": true
        }
      ]
    },
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    "fs:default"
  ]
}
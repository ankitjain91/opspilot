  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpsPilot",
  "version": "0.2.118",
  "identifier": "opspilot",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://127.0.0.1:1422",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpsPilot",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "binaries/agent-server"
    ],
    "resources": [
      "../knowledge/*.jsonl",
      "resources/kb_embeddings.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
